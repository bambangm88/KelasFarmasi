<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_marginLeft="5dp"
	android:layout_marginRight="5dp">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="right"
		android:layout_marginTop="5dp"
		android:id="@+id/lnChatRight"
		android:gravity="right|center"
		android:padding="10dp"
		android:background="@drawable/chat_right">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Text gahaha agyahaga afhaha acafhahahga agajabaga gajabag agayaua"
			android:maxWidth="250dp"
			android:id="@+id/chatRight"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="22:50"
			android:layout_gravity="right"
			android:textSize="11sp"
			android:gravity="center"
			android:id="@+id/jamChatRight"
			android:layout_marginTop="3dp"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:id="@+id/lnChatLeft"
		android:gravity="left|center"
		android:padding="10dp"
		android:background="@drawable/chat_left">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Text gahaha agyahaga afhaha acafhahahga agajabaga gajabag agayaua"
			android:maxWidth="250dp"
			android:id="@+id/chatLeft"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="22:50"
			android:textSize="11sp"
			android:gravity="center"
			android:id="@+id/jamChatLeft"
			android:layout_marginTop="3dp"/>

	</LinearLayout>

</LinearLayout>

