<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardCornerRadius="8dp"
	app:cardElevation="2dp"
	app:cardBackgroundColor="#FFFFFF"
	app:cardUseCompatPadding="true"
	android:layout_margin="5dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="10dp"
		android:background="#FFFFFF"
		android:gravity="center">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:id="@+id/namaSub"
			android:gravity="center"
			android:layout_centerHorizontal="true"
			android:text="KELAS X"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:id="@+id/hargaSub"
			android:gravity="center"
			android:layout_centerHorizontal="true"
			android:text="Rp 500,000"
			android:layout_marginTop="10dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:textSize="13sp"
			android:id="@+id/fasilitasSub"
			android:text="Kelas Bimbingan Intensif Tatap Muka dilaksanakan di Gedung. Anda akan diberikan bimbingan Secara Langsung oleh Mentor Terbaik kami. Anda akan mendapatkan pembelajaran Materi UKAI dan Soal UKAI sesuai dengan blueprint UKAI terbaru serta berbagai tips dan trik dalam menjawab soal ukai."
			android:gravity="center"
			android:textColor="#000000"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:text="Hubungi Admin"
			android:textSize="9sp"
			android:textStyle="normal"
			android:background="@drawable/button"
			android:stateListAnimator="@null"
			android:id="@+id/btnSub"
			android:textColor="#FFFFFF"
			android:paddingTop="5dp"
			android:paddingRight="10dp"
			android:paddingBottom="5dp"
			android:paddingLeft="10dp"
			android:layout_marginTop="10dp"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/lnTwoBtn"
			android:visibility="gone">

			<Button
				android:layout_width="wrap_content"
				android:layout_height="35dp"
				android:text="Update"
				android:textSize="9sp"
				android:textStyle="normal"
				android:background="@drawable/button"
				android:stateListAnimator="@null"
				android:id="@+id/btnUpdate"
				android:textColor="#FFFFFF"
				android:paddingTop="5dp"
				android:paddingRight="10dp"
				android:paddingBottom="5dp"
				android:paddingLeft="10dp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="5dp"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="35dp"
				android:text="Delete"
				android:textSize="9sp"
				android:textStyle="normal"
				android:background="@drawable/button"
				android:stateListAnimator="@null"
				android:id="@+id/btnDelete"
				android:textColor="#FFFFFF"
				android:paddingTop="5dp"
				android:paddingRight="10dp"
				android:paddingBottom="5dp"
				android:paddingLeft="10dp"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="5dp"/>

		</LinearLayout>

	</LinearLayout>

</androidx.cardview.widget.CardView>

