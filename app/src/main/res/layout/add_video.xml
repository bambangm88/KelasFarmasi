<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<include layout="@layout/toolbar"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:padding="8dp">

			<EditText
				android:layout_width="match_parent"
				android:ems="10"
				android:layout_height="wrap_content"
				android:id="@+id/judulVideo"
				android:hint="Input Title"
				android:textSize="14sp"
				android:padding="10dp"
				android:background="@drawable/input"/>

			<Spinner
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/ktgVideo"
				android:padding="10dp"
				android:background="@drawable/input"
				android:layout_marginTop="8dp"
				android:entries="@array/kelasVideo"/>

			<EditText
				android:layout_width="match_parent"
				android:ems="10"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:id="@+id/urlVideo"
				android:padding="10dp"
				android:textSize="14sp"
				android:hint="Input Url Youtube"
				android:background="@drawable/input"/>

			<EditText
				android:layout_width="match_parent"
				android:ems="10"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:gravity="top"
				android:id="@+id/deskVideo"
				android:hint="Input Deskripsi"
				android:textSize="14sp"
				android:padding="10dp"
				android:background="@drawable/input"/>

			<Button
				android:layout_width="match_parent"
				android:layout_height="35dp"
				android:text="Tambah Video"
				android:padding="10dp"
				android:textSize="10sp"
				android:background="@drawable/button"
				android:textColor="#FFFFFF"
				android:id="@+id/btnTambahVideo"
				android:stateListAnimator="@null"
				android:layout_marginTop="15dp"/>

		</LinearLayout>

	</ScrollView>

</LinearLayout>

